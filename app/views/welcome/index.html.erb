<section class="welcome-main">
  <div class="video-background">
    <div class="video-foreground">
      <iframe src="https://www.youtube.com/embed/IQQhdaoSMOs?controls=0&showinfo=0&rel=0&autoplay=1&mute=1&loop=1&playlist=IQQhdaoSMOs" frameborder="0" allowfullscreen></iframe>
      <hidden class="hidden">
        <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/65399005&color=%237c94ac&auto_play=true&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
      </hidden>
      Registration Page
    </div>
  </div>
  <section class="welcome-login">
    <h1>BattleShift</h1>
    <form class="register-hidden">
      <form class="form-container">
        <h2>Register to Play</h2>

        <%= form_tag '/register' do %>

        <%= label_tag 'name', nil, :class => "form-title" %>
        <%= text_field_tag 'name', "", :class => "form-field" %>

        <%= label_tag 'email', nil, :class => "form-title" %>
        <%= email_field_tag 'email', "", :class => "form-field" %>

        <%= label_tag 'password', nil, :class => "form-title" %>
        <%= password_field_tag 'password', "", :class => "form-field" %>

        <%= label_tag 'password_confirmation', nil, :class => "form-title" %>
        <%= password_field_tag 'password_confirmation', "", :class => "form-field" %>

        <submit class="submit-container">
          <%= submit_tag 'Create Account', :class => "submit-button" %>
        </submit>

        <% end %>
      </form>
    </form>
    <form class="login-hidden">
      <form class="form-container">
        <h2>Login to Play</h2>

        <%= form_tag '/login' do %>
          <%= label_tag 'email', nil, :class => "form-title" %>
          <%= text_field_tag 'email', "", :class => "form-field" %>

          <%= label_tag 'password', nil, :class => "form-title" %>
          <%= password_field_tag 'password', "", :class => "form-field" %>

          <submit class="submit-container">
            <%= submit_tag 'Log In', :class => "submit-button" %>
          </submit>
        <% end %>
      </form>
    </form>
    <button class="register-button">Register</button>
    <button class="login-button">Log In</button>
  </section>
  <credits class="credits">
    Music : <%= link_to "Song for Sienna", "https://open.spotify.com/track/3JkDhCmTQqMe2MJli79ZEz" %> by <%= link_to "Brian Crane", "http://briancrain.com/" %> and <%= link_to "YuJeong Lee", "http://www.yujeong.net/" %>
  </credits>
</section>
